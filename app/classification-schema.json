{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Taxonomic Classification Response",
  "description": "Schema for LLM response containing taxonomic classification",
  "type": "object",
  "properties": {
    "rationale": {
      "type": "string",
      "description": "description of rationale"
    },
    "classification": {
      "type": "object",
      "description": "Taxonomic classification as key-value pairs",
      "properties": {
        "kingdom": {
          "type": "string",
          "description": "Kingdom name (e.g., 'Animalia', 'Plantae'). (optional)"
        },
        "phylum": {
          "type": "string",
          "description": "Phylum name (e.g., 'Chordata', 'Arthropoda'). (optional)"
        },
        "class": {
          "type": "string",
          "description": "Class name (e.g., 'Aves', 'Mammalia'). (optional)"
        },
        "order": {
          "type": "string",
          "description": "Order name (e.g., 'Passeriformes', 'Primates'). (optional)"
        },
        "family": {
          "type": "string",
          "description": "Family name (e.g., 'Corvidae', 'Hominidae'). (optional)"
        },
        "genus": {
          "type": "string",
          "description": "Genus name (e.g., 'Corvus', 'Homo'). (optional)"
        },
        "species": {
          "type": "string",
          "description": "Species name (e.g., 'Corvus corax', 'Homo sapiens'). (optional)"
        }
      },
      "additionalProperties": false,
      "minProperties": 0
    }
  },
  "required": [],
  "additionalProperties": false,
  "examples": [
    {
      "thinking": "The user is asking for birds, which corresponds to the class Aves in the animal kingdom.",
      "classification": {
        "kingdom": "Animalia",
        "phylum": "Chordata",
        "class": "Aves"
      }
    },
    {
      "thinking": "Crows belong to the family Corvidae within birds.",
      "classification": {
        "kingdom": "Animalia",
        "phylum": "Chordata",
        "class": "Aves",
        "order": "Passeriformes",
        "family": "Corvidae"
      }
    },
    {
      "thinking": "Homo sapiens is the scientific name for humans.",
      "classification": {
        "kingdom": "Animalia",
        "phylum": "Chordata",
        "class": "Mammalia",
        "order": "Primates",
        "family": "Hominidae",
        "genus": "Homo",
        "species": "Homo sapiens"
      }
    },
    {
      "thinking": "The user requested all species, so returning empty classification.",
      "classification": {}
    }
  ]
}